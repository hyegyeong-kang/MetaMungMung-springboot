<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.metanet.metamungmung.mapper.meeting.OffMeetingMapper">
    <select id="getOffMeetingList" resultType="com.metanet.metamungmung.dto.meeting.OffMeetingDTO">
        select * from offMeeting where status = 'ACTIVE'
    </select>

    <select id="getOffMeeting" resultType="com.metanet.metamungmung.dto.meeting.OffMeetingDTO">
        select * from offMeeting where offMeetingIdx = #{offMeetingIdx}
    </select>

    <insert id="registerOffMeeting">
        insert into offMeeting
            values (#{offMeetingIdx}, #{memberIdx}, #{offMeetingMemIdx}, #{onMeetingIdx}, #{title}, sysdate, #{limit},
                #{contents},sysdate, sysdate,#{latitude}, #{longitude}, #{locationAddress}, #{startTime}, #{status})
    </insert>
</mapper>